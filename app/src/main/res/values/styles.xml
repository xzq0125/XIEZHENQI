<resources>

    <style name="EditTextStyleNoCursorDrawable" parent="Widget.AppCompat.EditText" />

    <style name="ToobarTitle">
        <item name="android:textColor">@color/textColor_toolbar_title</item>
        <item name="android:textSize">@dimen/textSize_toolbar_title</item>
        <item name="android:textStyle">bold</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="ActionBarStyle" parent="Widget.AppCompat.Light.ActionBar">
        <item name="background">@color/themeColor</item>
        <item name="android:background">@color/themeColor</item>
        <item name="displayOptions">homeAsUp</item>
        <item name="android:displayOptions">homeAsUp</item>
        <item name="elevation">0dp</item>
        <item name="android:minHeight">45dp</item>
        <item name="navigationIcon">@drawable/ic_action_back_dark</item>
    </style>

    <style name="ActionButtonStyle" parent="Widget.AppCompat.Light.ActionButton">
        <item name="android:background">@drawable/bg_common_press_nomask</item>
    </style>

    <style name="NavigationButtonStyle" parent="Widget.AppCompat.Toolbar.Button.Navigation">
        <item name="android:background">@drawable/bg_common_press_nomask</item>
    </style>

    <style name="BaseDialogStyle" parent="Theme.AppCompat.Light.Dialog">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="actionBarStyle">@style/ActionBarStyle</item>
        <item name="toolbarStyle">@style/ActionBarStyle</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="actionModeBackground">?attr/colorPrimary</item>
        <item name="colorPrimary">@color/themeColor</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlHighlight">@color/ripple_dark</item>
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@color/white</item>
    </style>


    <style name="TransparentDialogStyle" parent="BaseDialogStyle">
        <item name="android:windowBackground">@color/transparent</item>
    </style>

    <style name="ScaleTransparentDialogStyle" parent="TransparentDialogStyle">
        <item name="android:windowAnimationStyle">@style/ScaleCenterDialogAnimation</item>
    </style>

    <style name="ScaleCenterDialogAnimation">
        <item name="android:windowEnterAnimation">@anim/dialog_scale_in</item>
        <item name="android:windowExitAnimation">@anim/dialog_scale_out</item>
    </style>

    <style name="ButtonBarStyle" parent="Widget.AppCompat.Button.Borderless">
        <item name="textAllCaps">false</item>
        <item name="android:background">@null</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>
    </style>

    <style name="BottomTransparentDialogStyle" parent="TransparentDialogStyle">
        <item name="android:windowAnimationStyle">@style/DialogAnimation</item>
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/dialog_enter</item>
        <item name="android:windowExitAnimation">@anim/dialog_exit</item>
    </style>
</resources>
