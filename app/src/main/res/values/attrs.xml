<?xml version="1.0" encoding="utf-8"?>
<resources>

    <attr name="cropImageStyle" format="reference" />

    <declare-styleable name="CropImageView">
        <attr name="highlightColor" format="reference|color" />
        <attr name="showThirds" format="boolean" />
        <attr name="showCircle" format="boolean" />
        <attr name="showHandles">
            <enum name="changing" value="0" />
            <enum name="always" value="1" />
            <enum name="never" value="2" />
        </attr>
    </declare-styleable>

    <declare-styleable name="GradientTabView">
        <attr name="text_size" format="dimension" />
        <attr name="text_select_color" format="color" />
        <attr name="text_normal_color" format="color" />
        <attr name="item_padding" format="dimension" />
        <attr name="show_icon" format="boolean" />
        <attr name="text_style" format="enum">
            <enum name="normal" value="0" />
            <enum name="bold" value="1" />
            <enum name="italic" value="2" />
            <enum name="bold_italic" value="3" />
        </attr>
    </declare-styleable>

    <declare-styleable name="NumberProgressBar">

        <attr name="npb_reachedColor" format="color" />
        <attr name="npb_unreachedColor" format="color" />

        <attr name="npb_reachedThickness" format="dimension" />
        <attr name="npb_unreachedThickness" format="dimension" />

        <attr name="npb_textColor" format="color" />
        <attr name="npb_textSize" format="dimension" />

        <attr name="npb_textPaddingStart" format="dimension" />
        <attr name="npb_textPaddingEnd" format="dimension" />

        <attr name="npb_drawUnreachedBar" format="boolean" />

        <attr name="npb_drawText" format="boolean" />
        <attr name="npb_totalString" format="string" />

        <attr name="npb_orientation" format="enum">
            <enum name="horizontal" value="0" />
            <enum name="vertical" value="1" />
        </attr>

        <attr name="npb_drawDirection" format="enum">
            <enum name="up" value="0" />
            <enum name="down" value="1" />
        </attr>
        <attr name="npb_textStyle" format="enum">
            <enum name="normal" value="0" />
            <enum name="bold" value="1" />
            <enum name="italic" value="2" />
            <enum name="bold_italic" value="3" />
        </attr>
    </declare-styleable>

    <declare-styleable name="stl_SmartTabLayout">
        <attr name="stl_indicatorAlwaysInCenter" format="boolean" />
        <attr name="stl_indicatorWithoutPadding" format="boolean" />
        <attr name="stl_indicatorInFront" format="boolean" />
        <attr name="stl_indicatorInterpolation" format="enum">
            <enum name="smart" value="0" />
            <enum name="linear" value="1" />
        </attr>
        <attr name="stl_indicatorGravity" format="enum">
            <enum name="bottom" value="0" />
            <enum name="top" value="1" />
            <enum name="center" value="2" />
        </attr>
        <attr name="stl_indicatorColor" format="color" />
        <attr name="stl_indicatorColors" format="reference" />
        <attr name="stl_indicatorThickness" format="dimension" />
        <attr name="stl_indicatorWidth" format="dimension">
            <enum name="auto" value="-1" />
        </attr>
        <attr name="stl_indicatorCornerRadius" format="dimension" />
        <attr name="stl_overlineColor" format="color" />
        <attr name="stl_overlineThickness" format="dimension" />
        <attr name="stl_underlineColor" format="color" />
        <attr name="stl_underlineThickness" format="dimension" />
        <attr name="stl_dividerColor" format="color" />
        <attr name="stl_dividerColors" format="reference" />
        <attr name="stl_dividerThickness" format="dimension" />
        <attr name="stl_defaultTabBackground" format="reference" />
        <attr name="stl_defaultTabTextAllCaps" format="boolean" />
        <attr name="stl_defaultTabTextColor" format="color|reference" />
        <attr name="stl_defaultTabTextSize" format="dimension" />
        <attr name="stl_defaultTabTextHorizontalPadding" format="dimension" />
        <attr name="stl_defaultTabTextMinWidth" format="dimension" />
        <attr name="stl_customTabTextLayoutId" format="reference" />
        <attr name="stl_customTabTextViewId" format="reference" />
        <attr name="stl_distributeEvenly" format="boolean" />
        <attr name="stl_clickable" format="boolean" />
        <attr name="stl_titleOffset" format="dimension">
            <enum name="auto_center" value="-1" />
        </attr>
        <attr name="stl_drawDecorationAfterTab" format="boolean" />
        <attr name="stl_indicatorWidthSameWithTextWidth" format="boolean" />
    </declare-styleable>

    <!--PlayLoadIng-->
    <declare-styleable name="LoadingView">
        <attr name="outerCircleRadius" format="dimension|reference" />
        <attr name="outerCircleColor" format="color|reference" />
        <attr name="innerTriangleRadius" format="dimension|reference" />
        <attr name="innerTriangleColor" format="color|reference" />
        <attr name="backgroundColor" format="color|reference" />
        <attr name="isNeedBackground" format="boolean" />
        <attr name="strokeWidth" format="dimension|reference" />
    </declare-styleable>
</resources>