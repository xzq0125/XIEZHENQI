<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_ndk"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.xiezhenqi.business.more.mazing.IDActivity">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/app_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/transparent"
        app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/toolbarCollapse"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true"
            app:contentScrim="@color/white"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            app:statusBarScrim="@android:color/transparent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:gravity="center"
                app:layout_collapseMode="parallax">

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="不是小冷"
                    android:textColor="@color/black"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/tv_intro"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_name"
                    android:text="活在米星就是生活方式"
                    android:textColor="#ff666666"
                    android:textSize="14sp" />

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginEnd="20dp"
                    android:layout_marginRight="20dp"
                    android:src="@mipmap/ic_launcher" />

                <am.widget.gradienttabstrip.GradientTabStrip
                    android:id="@+id/gts"
                    android:layout_width="wrap_content"
                    android:layout_height="?attr/actionBarSize"
                    android:layout_below="@id/tv_intro"
                    android:layout_gravity="bottom"
                    android:background="@drawable/bg_main_tabbar"
                    android:textColor="@color/tc_custom_tab"
                    android:textSize="11sp"
                    app:gtsDrawablePadding="5dp"
                    app:gtsTagMargin="5dp"
                    app:gtsTagMinHeight="15dp"
                    app:gtsTagMinWidth="15dp"
                    app:gtsTagPaddingLeft="2dp"
                    app:gtsTagPaddingRight="2dp" />

            </RelativeLayout>

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_intro"
                android:background="@color/transparent"
                app:layout_collapseMode="pin">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="visible">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:drawableTop="@drawable/ic_tasty"
                        android:gravity="center"
                        android:text="体验"
                        android:textColor="#ff666666"
                        android:textSize="11sp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginStart="20dp"
                        android:layout_weight="1"
                        android:drawableTop="@drawable/ic_star"
                        android:gravity="center"
                        android:text="推荐"
                        android:textColor="#ff666666"
                        android:textSize="11sp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginStart="20dp"
                        android:layout_weight="1"
                        android:drawableTop="@drawable/ic_like"
                        android:gravity="center"
                        android:text="喜欢"
                        android:textColor="#ff666666"
                        android:textSize="11sp" />

                </LinearLayout>

            </android.support.v7.widget.Toolbar>

        </android.support.design.widget.CollapsingToolbarLayout>

        <am.widget.replacelayout.ReplaceLayout
            android:id="@+id/rl"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="#faffffff"
            android:clickable="true" />

        <com.xiezhenqi.widget.smarttablayout.SmartTabLayout
            android:id="@+id/stl"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/bg_tab_view"
            custom:stl_distributeEvenly="true"
            custom:stl_dividerColor="@color/transparent"
            custom:stl_dividerThickness="0dp"
            custom:stl_indicatorColor="@color/themeColor"
            custom:stl_indicatorCornerRadius="5dp"
            custom:stl_indicatorGravity="center"
            custom:stl_indicatorInterpolation="linear"
            custom:stl_indicatorThickness="35dp"
            custom:stl_indicatorWidthSameWithTextWidth="false"
            custom:stl_underlineColor="@color/transparent"
            custom:stl_underlineThickness="0dp" />
    </android.support.design.widget.AppBarLayout>

    <com.xiezhenqi.widget.MyNestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="vertical">

            <com.xiezhenqi.widget.WrapContentHeightViewPager
                android:id="@+id/vp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp" />
        </LinearLayout>

    </com.xiezhenqi.widget.MyNestedScrollView>

</android.support.design.widget.CoordinatorLayout>
