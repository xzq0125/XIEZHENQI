<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_progress_bar"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.xiezhenqi.business.more.progress.ProgressBarActivity">

    <com.xiezhenqi.widget.progressbar.NumberProgressBar
        android:id="@+id/progress1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:layout_marginTop="100dp"
        android:background="@color/white"
        android:visibility="visible"
        app:npb_drawUnreachedBar="true"
        app:npb_orientation="horizontal"
        app:npb_reachedThickness="3dp"
        app:npb_textPaddingEnd="0dp"
        app:npb_textPaddingStart="0dp"
        app:npb_textSize="10sp"
        app:npb_unreachedThickness="3dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_centerInParent="true"
        android:onClick="onButtonClick"
        android:text="开始" />

</RelativeLayout>
